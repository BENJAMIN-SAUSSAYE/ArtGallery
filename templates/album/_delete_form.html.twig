<form method="post" action="{{ path('app_album_delete', {'id': album.id}) }}" onsubmit="return confirm(''Êtes-vous sûr de bien vouloir supprimer cet album ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ album.id) }}">
    <button class="btn icon-link icon-link-hover-left link-light text-decoration-none">
        {{ include('/components/svg/_icon_trash.svg.twig') }}
        Supprimer
	</button>
</form>
