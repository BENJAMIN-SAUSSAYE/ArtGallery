{% extends 'visitor.html.twig' %}
{% block title %}
	{{ parent()}}
	- Mes Albums
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('album') }}
{% endblock %}
{% block body %}
	<main class="mt-4">
		<div class="container-fluid px-4 m-auto">
			<div class="row">
				<div class="col border border-opacity-50 border-bottom-2 border-to-0 border-start-0 border-end-0 border-top-0 border-light mb-4">
					<h1 class="fw-bolder">Mes Albums</h1>
				</div>
			</div>
			<div class="text-center">
				<div class="row row-cols-1 row-cols-xl-2 row-cols-xxl-3 g-4">
					{% for album in albums %}
						<div class="col">
							<div class="card">
								<div class="card-header d-flex flex-sm-column justify-content-between align-items-center">
									<span class="text-capitalize">
										{% if album.isPrivate %}
											<span class="text-secondary pe-1">{% include "components/svg/_icon_eye.svg.twig" %}</span>
											public
										{% else %}
											<span class="text-dark pe-1">{% include "components/svg/_icon_lock.svg.twig" %}</span>
											private
										{% endif %}
									</span>
									<span>
										{{ album.createdAt ? album.createdAt|date('d/m/Y') : '' }}
									</span>
								</div>

								<a href="{{ path('app_album_show', {'id': album.id}) }}">
									{% if album.pictureCover is not empty %}
										<img src="{{ vich_uploader_asset(album.pictureCover) }}" class="card-img-top img-fluid" alt="album image">
									{% else %}
										<img src="{{ asset('build/images/placeholder/placeholder_album_250x150.svg') }}" class="card-img-top img-fluid" alt="album image">
									{% endif %}
								</a>

								<div class="card-body">
									<h5 class="card-title text-secondary overflow letter-spacing-title pb-2 fs-5">{{ album.name|u.truncate(20, '...') }}</h5>
								</div>

								<div class="card-footer text-end">
									<span class="text-capitalize fs-6">{{ album.pictures|length ~ ' image(s)' }}</span>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</main>
{% endblock %}