{% extends 'visitor.html.twig' %}
{% block title %}
	{{ parent()}}
	- Voir Album
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('album') }}
{% endblock %}
{% block body %}
	<main class="mt-4">
		<div class="container">
			<div class="row">
				<div class="m-auto col col-xl-10">
                    <div class="d-flex justify-content-end align-items-center my-4 px-2">
						{{ include('album/_delete_form.html.twig') }}
					</div>
                    <h1 class="fw-bolder">Album</h1>
					<div class="border border-primary border-1 mb-4 px-2">
						
						<table class="tablesy">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ album.id }}</td>
								</tr>
								<tr>
									<th>Name</th>
									<td>{{ album.name }}</td>
								</tr>
								<tr>
									<th>CreatedAt</th>
									<td>{{ album.createdAt ? album.createdAt|date('Y-m-d H:i:s') : '' }}</td>
								</tr>
								<tr>
									<th>Description</th>
									<td>{{ album.description }}</td>
								</tr>
								<tr>
									<th>IsPrivate</th>
									<td>{{ album.isPrivate ? 'Yes' : 'No' }}</td>
								</tr>
							</tbody>
						</table>

						<div class="d-flex flex-sm-row flex-column justify-content-between align-items-center my-4 px-2">
							<a class="btn fw-bolder text-dark icon-link icon-link-hover-left icon-dark text-uppercase order-3 order-sm-1 mb-4" href="{{ path('app_album_index') }}">
								{% include "components/svg/_icon_backlink.svg.twig" %}
								Retour
							</a>
							<a class="btn fw-bolder text-dark icon-link icon-link-hover icon-dark text-uppercase order-3 order-sm-1 mb-4" href="{{ path('app_album_edit', {'id': album.id}) }}">
								Modifier
                                {% include "components/svg/_icon_edit.svg.twig" %}
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}