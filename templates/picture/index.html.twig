{% extends 'base.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
    <h1>Picture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>FileName</th>
                <th>CreatedAt</th>
                <th>IsPrivate</th>
                <th>IsAlbumCover</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.title }}</td>
                <td>{{ picture.fileName }}</td>
                <td>{{ picture.createdAt }}</td>
                <td>{{ picture.isPrivate ? 'Yes' : 'No' }}</td>
                <td>{{ picture.isAlbumCover ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_picture_show', {'id': picture.id}) }}">show</a>
                    <a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_picture_new') }}">Create new</a>
{% endblock %}
