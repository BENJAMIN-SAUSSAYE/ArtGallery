{% extends 'visitor.html.twig' %}
{% block title %}
	{{ parent()}}
	- Index Images
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('album') }}
{% endblock %}
{% block body %}
    <h1>Liste Des Images</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>FileName</th>
                <th>CreatedAt</th>
                <th>IsPrivate</th>
                <th>IsAlbumCover</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.title }}</td>
                <td>{{ picture.pictureFile }}</td>
                <td>{{ picture.createdAt|date("d/m/Y") }}</td>
                <td>{{ picture.isPrivate ? 'Yes' : 'No' }}</td>
                <td>{{ picture.isAlbumCover ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_picture_show', {'id': picture.id}) }}">show</a>
                    <a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_picture_new') }}">Create new</a>
{% endblock %}
