{% extends 'visitor.html.twig' %}
{% block title %}
	{{ parent()}}
	- Images
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('album') }}
{% endblock %}
{% block body %}
<turbo-frame id="the_frame_id">
	<main class="mt-4">
		<div class="container-fluid px-4 m-auto">
			<div class="row">
				<div class="col border border-opacity-50 border-bottom-2 border-to-0 border-start-0 border-end-0 border-top-0 border-light mb-4">
					<h1 class="fw-bolder">Images</h1>
				</div>
			</div>

			<div class="row">
				{% for picture in pictures %}
					<div class="col">
						<div class="d-flex flex-column align-items-center">
							<div>{{ picture.title }}</div>
							<div>{{ picture.createdAt|date("d/m/Y") }}</div>
							<div class="d-flex justify-content-center align-items-center">
								<img src="{{ vich_uploader_asset(picture) }}" class="d-block vh-100 shadow-lg rounded-1" alt="image">
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</turbo-frame>
{% endblock %}